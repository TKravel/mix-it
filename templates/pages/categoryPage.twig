{% extends "partials/layout.twig" %}
{% block title %}
    {{ headerText }}'s
{% endblock %}
{% block styles %}
    <link rel="stylesheet" href="/mix-it/public/css/displayPage.css" />
{% endblock %}

{% block content %}
    <main id="main-cont" class="p-3 p-md-5">
        <div>
            <input id="catValue" type="hidden" value="{{ dataset }}" />
            <h1 class="text-center my-3">{{ headerText }} <span id="drinkCount"></span></h1>
            <div id="card-container" class="d-flex flex-row flex-wrap justify-content-evenly"></div>
            <nav class="page-nav mt-5" aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item"><a id="prev" class="page-link page-control active-page" onClick="changePage(event)">Prev</a></li>
                    <li class="page-item"><a class="page-link page-btn" onClick="changePage(event)">1</a></li>
                    <li class="page-item"><a class="page-link page-btn" onClick="changePage(event)">2</a></li>
                    <li class="page-item"><a class="page-link page-btn" onClick="changePage(event)">3</a></li>
                    <li class="page-item"><a id="next" class="page-link page-control active-page" onClick="changePage(event)">Next</a></li>
                </ul>
            </nav>
        </div>

    </main>
{% endblock %}

{% block scripts %}
    <script src="/mix-it/public/scripts/categoryPage.js"></script>
{% endblock %}