{% extends "partials/layout.twig" %}
{% block title %}
    {{ displayableName }}
{% endblock %}
{% block styles %}
    <link rel="stylesheet" href="/mix-it/public/css/popularPage.css" />
{% endblock %}

{% block content %}
    <main id="main-cont">
        <div>
            <input id="catValue" type="hidden" value="{{ dataset }}" />
            <h1>Category: {{ headerText }} <span id="drinkCount"></span></h1>
            <nav class="page-nav" aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item"><a id="prev" class="page-link" onClick="changePage(event)">Previous</a></li>
                    <li class="page-item disabled"><span id="page-info"></span></li>
                    <li class="page-item"><a id="next" class="page-link" onClick="changePage(event)">Next</a></li>
                </ul>
            </nav>
            <div class="card-container"></div>
        </div>
        <div>
            <button id="prev" onClick="changePage(event)">Prev</button>

            <button id="next" onClick="changePage(event)">Next</button>
        </div>
    </main>
{% endblock %}

{% block scripts %}
    <script src="/mix-it/public/scripts/categoryPage.js"></script>
{% endblock %}