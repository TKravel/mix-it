{% extends "partials/layout.twig" %}
{% block title %}
    New drinks
{% endblock %}

{% block content %}
    <main id="main-cont" class="p-3 p-md-5">
        <h1 class="text-center my-3">Recently added</h1>
        <div class="d-flex flex-row flex-wrap justify-content-evenly">
            {% for drink in newDrinks %}
                <div class="thumb-card text-center rounded-circle p-3 m-3 m-md-5" data-drinkId="{{ drink.id }}" onClick="handleSelection(event)">
                    <img class="rounded-circle img-fluid mb-2" src="{{ drink.img }}" alt="{{ drink.name }}" />
                    <p>{{ drink.name }}</p>
                </div>
            {% endfor %}
        </div>

    </main>
{% endblock %}

{% block scripts %}
    <script src="/mix-it/public/scripts/popularPage.js"></script>
{% endblock %}